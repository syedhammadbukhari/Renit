<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:background="@color/colortop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Details"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:padding="10dp"
        >
        <TextView
            android:layout_weight="0.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:padding="20dp"
            android:textSize="25sp"
            android:id="@+id/titlecateringform_id"
            android:layout_weight="0.7"
            android:hint="Title for catering company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:padding="10dp"
        >
        <TextView
            android:layout_weight="0.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:padding="20dp"
            android:textSize="25sp"
            android:id="@+id/detailcateringform_id"
            android:layout_weight="0.7"
            android:hint="Area of the ground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type of catering"
        android:layout_marginLeft="10dp"
        android:textSize="25sp"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        />
    <EditText
        android:padding="20dp"
        android:textSize="25sp"
        android:id="@+id/descriptioncateringform_id"
        android:layout_width="match_parent"
        android:hint="Key features for catering company"
        android:layout_height="150dp"/>

    <Button
        android:id="@+id/next_btn_catering_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/colortop"
        android:text="Next"
        android:textColor="@android:color/white"
        android:textSize="25sp"

        />


</LinearLayout>
